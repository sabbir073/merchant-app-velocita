<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeaconStitbd" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/poppins</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarStyle">
        <item name="android:textColorSecondary">@color/teal_200</item>
        <item name="colorControlNormal">@color/teal_200</item>
    </style>
    <style name="Theme.BeaconStitbd.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BeaconStitbd.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BeaconStitbd.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BeaconStitbdone" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <item name="android:fontFamily">@font/poppins</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    font -->

    <style name="RobotoRegular" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="RobotoMedium" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="RobotoBold" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="RobotoLight" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="PlayFairBold" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/PlayfairDisplay-Bold.ttf</item>
    </style>

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/poppins</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconStart">@drawable/ic_arrow_down</item>
        <item name="stIconEnd">@drawable/ic_nav_add_parcel</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">5dp</item>
    </style>


</resources>